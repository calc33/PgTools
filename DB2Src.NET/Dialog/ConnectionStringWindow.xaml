<Window x:Name="window" x:Class="Db2Source.ConnectionStringWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Db2Source"
        mc:Ignorable="d"
        Title="接続文字列" ResizeMode="NoResize" SizeToContent="WidthAndHeight" ShowInTaskbar="False" WindowStyle="None" MinWidth="100" MaxWidth="600">
    <DockPanel>
        <TextBox x:Name="textBoxConnectionString" Text="{Binding ConnectionString, ElementName=window, Mode=OneWay}" IsReadOnly="True" AcceptsReturn="True" AcceptsTab="True" TextWrapping="Wrap" Padding="8,4" Background="{DynamicResource {x:Static SystemColors.InfoBrushKey}}"/>
    </DockPanel>
</Window>
