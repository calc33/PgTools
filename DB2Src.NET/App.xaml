                                            </PathFigure>
                                        </PathGeometry>
                                    </Path.Data>
                                </Path>
                                <Path x:Name="pathArrow" Fill="{TemplateBinding Foreground}">
                                    <Path.Data>
                                        <PathGeometry>
                                            <PathFigure StartPoint="13,4" IsClosed="True" IsFilled="True">
                                                <PathFigure.Segments>
                                                    <LineSegment Point="8,0"/>
                                                    <LineSegment Point="8,9"/>
                                                </PathFigure.Segments>
                                            </PathFigure>
                                        </PathGeometry>
                                    </Path.Data>
                                </Path>
                                <Ellipse Canvas.Left="3" Canvas.Top="3" Width="10" Height="10" />
                            </Canvas>
