<Window x:Name="window" x:Class="Db2Source.SelectColumnWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Db2Source"
        mc:Ignorable="d"
        Title="" WindowStyle="None" SizeToContent="WidthAndHeight" Deactivated="window_Deactivated" ResizeMode="CanResizeWithGrip" KeyDown="window_KeyDown" IsVisibleChanged="window_IsVisibleChanged">
    <DockPanel>
        <TextBox x:Name="textBoxFilter" ToolTip="(項目名で絞り込み)" DockPanel.Dock="Top" TextChanged="textBoxFilter_TextChanged" BorderThickness="1,1,1,0" PreviewKeyDown="textBoxFilter_PreviewKeyDown"/>
        <ListBox x:Name="listBoxColumns" ItemsSource="{Binding Grid.Columns, ElementName=window}" DisplayMemberPath="Header" MinHeight="100" MinWidth="140" MaxHeight="400" MouseDoubleClick="listBoxColumns_MouseDoubleClick" />
    </DockPanel>
</Window>
